<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        <% if @user.errors.present? %>
          <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @user.errors.full_messages.each do |full_messages| %>
                <li>
                    <%= full_messages %>
                </li>
                <% end %>
            </ul>
          </div>
          <% end %>
          
          <%= f.label :profile, "プロフィール" %>
          <%= f.text_area :profile, class: 'form-control' %>
          
          <%= f.label :email, "メールアドレス" %>
          <%= f.text_field :email, class: 'form-control' %>
          
          <%= f.label :location, "地域" %>
          <%= f.text_field :location, class: 'form-control' %>
          
          <%= f.label :password, "新しいパスワード" %>
          <%= f.password_field :password, class: 'form-control' %>
          
          <%= f.label :password_confirmation, "新しいパスワード（確認）" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
          
          <%= f.submit "編集", class: "btn btn-default" %>
        <% end %>
    </div>
</div>