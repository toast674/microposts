<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        <% if @user.errors.present? %>
          <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @user.errors.full_messages.each do |full_messages| %>
                <li>
                    <%= full_messages %>
                </li>
                <% end %>
            </ul>
          </div>
          <% end %>
          
          <%= f.label :profile %>
          <%= f.text_area :profile, class: 'form-control' %>
          
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control' %>
          
          <%= f.label :location %>
          <%= f.text_field :location, class: 'form-control' %>
          
          
          <%= f.submit "edit", class: "btn btn-default" %>
        <% end %>
    </div>
</div>